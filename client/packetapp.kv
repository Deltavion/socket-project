

<View>:
    username:username
    ip:ip
    BoxLayout:
        orientation: 'horizontal'
        width: self.parent.width
        height: self.parent.height
        background_color: "#ffffff"
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.2,1
            background_color: "#000000"
            Button:
                text:"General 1"
            Button:
                text:"General 2"

            
            BoxLayout:
                orientation: 'vertical'
                size_hint: 1,0.2
                
                Label:
                    id: username
                    text:"Username"
                    text_size: self.size
                    bold: True
                Label:
                    id: ip
                    text:"Ip"
                    text_size: self.size
                    margin_left: 10 




        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.8,1
            height: self.parent.height
            background_color: "#ffffff"
            BoxLayout:
                orientation: "vertical"
                size_hint_x: 0.5
            BoxLayout:
                orientation: "horizontal"
                size_hint: 1,0.1
                TextInput:
                    id: textinput
                    hint_text: "Entrer votre message :"
                    size_hint: 0.8,1
                    height: 100
                Button:
                    size_hint: 0.2,1
                    text: "Envoyer"
                    background_color: "#000088"
                    color: "#ffffff"