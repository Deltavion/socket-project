#:kivy 2.0.0

<View>:
    username:username_label
    ip:ip_label
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.2, 1
        pos_hint: {"x":1, "y":0}

        RV:
            size_hint: 1, 0.8
            canvas.before:
                
                Color:
                    rgb: 0.20, 0.20, 0.20
                Rectangle:
                    pos: self.pos
                    size: self.size

            id: clients_rv

        Label:
            size_hint: 1, 0.07
            canvas.before:
                
                Color:
                    rgb: 0.10, 0.10, 0.10
                Rectangle:
                    pos: self.pos
                    size: self.size

            id: username_label
            text: "Username"

        Label:
            size_hint: 1, 0.07
            canvas.before:
                
                Color:
                    rgb: 0.10, 0.10, 0.10
                Rectangle:
                    pos: self.pos
                    size: self.size

            id: ip_label
            text: "Ip"

    BoxLayout:
        
        canvas.before:
            Color:
                rgba: 0.20, 0.20, 0.20, 1
            Rectangle:
                pos: self.pos
                size: self.size

        orientation: 'vertical'
        # size_hint: 1,0.1

        BoxLayout:
            orientation: 'horizontal'
            
            RV:
                canvas.before:
                    Color:
                        rgba: 0.80, 0.80, 0.80, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: msg_rv
                color: 1,0,1,1 
                

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.1
            TextInput:
                size_hint: 0.8, 1

                hint_text: "Entrer votre message : "
                id: msg_input
                # size_hint: 0.8,1
                # border: 30, 30, 30, 30

            Button:
                size_hint: 0.2, 1
                canvas.before:
                    Color:
                        rgba: 1, 1, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

                id: send_btn
                text: "send"
                # size_hint: 0.2,1

<RV>:
    viewclass: 'Label'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'