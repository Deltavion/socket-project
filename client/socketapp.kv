#:kivy 2.0.0

<View>:
    BoxLayout:
        orientation: 'vertical'
        # size_hint: 0.2, 0.2
        pos_hint: {"x":1, "y":0}

        RV:
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            id: clients_rv

        Label:
            canvas.before:
                Color:
                    rgba: 0, 1, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            id: username_label
            text: "Username"

        Label:
            canvas.before:
                Color:
                    rgba: 0, 0, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            id: ip_label
            text: "Ip"

    BoxLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        orientation: 'vertical'
        # size_hint: 1,0.1

        BoxLayout:
            orientation: 'horizontal'

            RV:
                canvas.before:
                    Color:
                        rgba: 1, 0, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

                id: msg_rv

        BoxLayout:
            orientation: 'horizontal'

            TextInput:
                canvas.before:
                    Color:
                        rgba: 0, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

                id: msg_input
                # size_hint: 0.8,1
                # border: 30, 30, 30, 30

            Button:
                canvas.before:
                    Color:
                        rgba: 1, 1, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

                id: send_btn
                text: "send"
                # size_hint: 0.2,1

<RV>:
    viewclass: 'Label'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'